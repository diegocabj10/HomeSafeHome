{
    "openapi": "3.0.1",
    "info": {
        "version": "1.0.0",
        "title": "Home Safe Home Swagger",
        "description": "",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "http://localhost:8080/api",
            "description": "Dev Server"
        }
    ],
    "tags": [
        {
            "name": "Events"
        },
        {
            "name": "Notifications"
        }
    ],
    "paths": {
        "/events": {
            "post": {
                "tags": [
                    "Events"
                ],
                "description": "Create new event",
                "operationId": "createEvent",
                "parameters": [],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/Event"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "New event is created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/Event"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/notifications": {
            "get": {
                "tags": [
                    "Notifications"
                ],
                "description": "Returns all notifications from the system that the user has access to",
                "operationId": "getNotifications",
                "parameters": [
                    {
                        "name": "size",
                        "in": "query",
                        "description": "Max records to return",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Number of page",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of notifications",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "$ref": "#/components/Notification"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "Event": {
            "type": "object",
            "required": [
                "eventSignalId",
                "eventDeviceId",
                "eventValue"
            ],
            "properties": {
                "eventSignalId": {
                    "type": "integer",
                    "description": "Signal identification number",
                    "example": 1
                },
                "eventDeviceId": {
                    "type": "integer",
                    "description": "Device identification number",
                    "example": 1
                },
                "eventValue": {
                    "type": "integer",
                    "description": "Signal value",
                    "example": 10
                }
            }
        },
        "Notification": {
            "type": "object",
            "required": [
                "size",
                "page"
            ],
            "properties": {
                "notificationId": {
                    "type": "integer",
                    "description": "Notification identification number"
                },
                "notificationDate": {
                    "type": "string",
                    "description": "Notification date",
                    "format": "date-time"
                },
                "notificationReadtDate": {
                    "type": "string",
                    "description": "Read date of notification",
                    "format": "date-time"
                },
                "notificationUserId": {
                    "type": "integer",
                    "description": "User identification number"
                },
                "notificationEventId": {
                    "type": "integer",
                    "description": "Event identification number"
                },
                "notificationDeletionDate": {
                    "type": "string",
                    "description": "Deletion date of notification",
                    "format": "date-time"
                },
                "notificationTitle": {
                    "type": "string",
                    "description": "Title notification"
                },
                "notificationMessage": {
                    "type": "string",
                    "description": "Message notification"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "internal_code": {
                    "type": "string"
                }
            }
        }
    }
}